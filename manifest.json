{
  "manifest_version": 2,

  "name": "Shruggie",
  "short name": "Shruggie",
  "description": "This extension copies the shruggie character to your clipboard",
  "version": "0.1",

  "browser_action": {
    "default_icon": "shruggie-full.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": { "16": "shruggie-16.png",
           "32": "shruggie-32.png",
           "48": "shruggie-48.png",
          "128": "shruggie-128.png" }
}